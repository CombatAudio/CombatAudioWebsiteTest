<script>
  document.querySelectorAll('.video-panel a').forEach(link => {
    link.addEventListener('click', function (e) {
      e.preventDefault();

      const targetId = this.dataset.audio;
      const audio = document.getElementById(targetId) as HTMLAudioElement;

      // Pause all others
      document.querySelectorAll('audio').forEach(a => {
        if (a !== audio) a.pause();
      });

      // Toggle play
      if (audio.paused) {
        audio.play();
        document.querySelectorAll('.video-panel a').forEach(a => a.classList.remove('active'));
        this.classList.add('active');
      } else {
        audio.pause();
        this.classList.remove('active');
      }
    });
  });
</script>
