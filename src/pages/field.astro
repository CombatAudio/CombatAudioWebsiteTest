---
const title = "Live Recording";
---
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Field Recording</title>
    <style>
      html, body {
        margin: 0;
        padding: 0;
        height: 100%;
        font-family: Arial, sans-serif;
        background-color: #00C781;
        color: white;
        overflow: hidden;
      }
      header {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        height: 70px;
        background-color: #111;
        color: white;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0 1.5rem;
        z-index: 1000;
      }
      .logo {
        font-size: 1.2rem;
        font-weight: bold;
        text-decoration: none;
        color: white;
      }
      .contact-button {
        background-color: #00C781;
        color: white;
        border: none;
        padding: 0.5rem 1rem;
        border-radius: 4px;
        text-decoration: none;
        font-weight: bold;
        cursor: pointer;
        transition: background-color 0.3s ease;
      }
      .contact-button:hover {
        background-color: #00a86b;
      }
      main {
        margin-top: 70px;
        height: calc(100vh - 70px);
        display: flex;
        align-items: center;
        justify-content: center;
      }
      a.back-link {
        color: white;
        text-decoration: underline;
        margin-top: 1rem;
        display: block;
      }
    </style>
  </head>
  <body>
    <header>
  		<a href="/" class="logo">Recording Services</a>
  		<a href="/contact" class="contact-button">Contact</a>
	  </header>
    <main>
      <div style="text-align: center;">
        <h1>Field Recording Page</h1>
        <a href="/" class="back-link">‚Üê Back to Home</a>
      </div>
    </main>
  </body>
</html>
