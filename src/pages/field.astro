const title = "Field Recording";
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} >
    <title>Field Recording</title>
    <style>
      html, body {
        margin: 0;
        padding: 0;
        height: 100%;
        font-family: Arial, sans-serif;
      }
      body {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
      }
      .page {
        display: flex;
        flex-direction: column;
        flex: 1;
        background-color: #111;
        color: white;
      }
      header {
        position: sticky;
        top: 0;
        z-index: 1000;
        height: 70px;
        background-color: #111;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0 1.5rem;
      }
      .logo {
        font-size: 1.2rem;
        font-weight: bold;
        text-decoration: none;
        color: white;
      }
      .contact-button {
        background-color: #00C781;
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 4px;
        text-decoration: none;
        font-weight: bold;
        cursor: pointer;
        transition: background-color 0.3s ease;
      }
      .contact-button:hover {
        background-color: #00a86b;
      }
      main {
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 2rem;
        padding: 2rem;
      }
      .field-panel {
        width: 90%;
        max-width: 900px;
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 1rem;
      }
      .field-panel a {
        display: block;
        flex: 1 1 calc(33% - 1rem);
        min-width: 260px;
        height: 200px;
        background-color: #333;
        border: 2px solid #111;
        color: white;
        font-size: 1.2rem;
        font-weight: bold;
        text-decoration: none;
        display: flex;
        justify-content: center;
        align-items: center;
        border-radius: 8px;
        transition: transform 0.3s ease, border-color 0.3s ease;
        text-align: center;
      }
      .field-panel a:hover {
        transform: scale(1.05);
        border-color: #00C781;
        background-color: #444;
      }
      footer {
        position: sticky;
        bottom: 0;
        z-index: 1000;
        background-color: #111;
        color: #aaa;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem 1.5rem;
        font-size: 0.9rem;
      }
      .footer-left {
        flex: 1;
      }
    </style>
  </head>
  <body>
    <div class="page">
      <header>
        <div style="flex: 1; display: flex; justify-content: flex-start;">
          <a href="/" class="logo">combat.audio</a>
        </div>
        <div style="flex: 1; text-align: center;">
          <a href="/resources" aria-label="Resources" style="color: white; text-decoration: none; font-weight: bold; font-size: 1rem;">üìö Resources</a>
        </div>
        <div style="flex: 1; display: flex; justify-content: flex-end;">
          <a href="/contact" class="contact-button">Contact</a>
        </div>
      </header>
      <main>
        <div class="field-panel">
          <a href="/sfx-packs" style="background-color: #FFB347;">SFX Packs</a>
          <a href="/field-travel" style="background-color: #6495ED;">Field Recordings and Travel</a>
          <a href="/equipment-education" style="background-color: #90EE90;">Equipment / Education</a>
        </div>
      </main>
      <footer>
        <div class="footer-left">
          <a href="/" aria-label="Home" style="color: #aaa; text-decoration: none; font-size: 1.2rem; margin-right: 1rem;">üè†</a>
          ¬© Combat Audio 2025
        </div>
      </footer>
    </div>
  </body>
</html>
