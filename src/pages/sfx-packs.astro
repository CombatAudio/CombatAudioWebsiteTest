const title = "SFX Packs";
---
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <style>
      html, body {
        margin: 0;
        padding: 0;
        height: 100%;
        font-family: Arial, sans-serif;
      }
      body {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
      }
      .page {
        display: flex;
        flex-direction: column;
        flex: 1;
        background-color: #222;
        color: white;
      }
      header {
        position: sticky;
        top: 0;
        z-index: 1000;
        height: 70px;
        background-color: #111;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0 1.5rem;
      }
      .logo {
        font-size: 1.2rem;
        font-weight: bold;
        text-decoration: none;
        color: white;
      }
      .contact-button {
        background-color: #00C781;
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 4px;
        text-decoration: none;
        font-weight: bold;
        cursor: pointer;
        transition: background-color 0.3s ease;
      }
      .contact-button:hover {
        background-color: #00a86b;
      }
      main {
        flex: 1;
        padding: 4rem 2rem;
        text-align: center;
      }
      footer {
        position: sticky;
        bottom: 0;
        z-index: 1000;
        background-color: #111;
        color: #aaa;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem 1.5rem;
        font-size: 0.9rem;
      }
      .footer-left {
        flex: 1;
      }
      .footer-right {
        flex-shrink: 0;
      }
      .footer-right a {
        color: #aaa;
        text-decoration: none;
        margin-left: 1rem;
        font-size: 1.2rem;
      }
      .footer-right a:hover {
        color: #fff;
      }
      .back-link {
        margin-top: 2rem;
        color: #ccc;
        text-decoration: none;
        display: inline-block;
      }
    .card-list {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
  align-items: center;
  justify-content: center;
  margin-top: 2rem;
}
.card {
  background-color: #444;
  padding: 1.5rem;
  border-radius: 10px;
  max-width: 600px;
  width: 100%;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
  font-size: 1rem;
  line-height: 1.6;
  transition: transform 0.2s ease;
}
.card:hover {
  transform: translateY(-4px);
  background-color: #555;
}
</style>
