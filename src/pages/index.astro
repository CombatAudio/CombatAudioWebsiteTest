---
const title = "Home";
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} >
    <title>Home</title>
    <style>
      html, body {
        margin: 0;
        padding: 0;
        height: 100%;
        font-family: Arial, sans-serif;
      }
      body {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        background-color: #111;
        color: white;
      }
      header {
        position: sticky;
        top: 0;
        z-index: 1000;
        height: 70px;
        background-color: #111;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0 1.5rem;
      }
      .logo {
        font-size: 1.2rem;
        font-weight: bold;
        text-decoration: none;
        color: white;
      }
      .contact-button {
        background-color: #00C781;
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 4px;
        text-decoration: none;
        font-weight: bold;
        cursor: pointer;
        transition: background-color 0.3s ease;
      }
      .contact-button:hover {
        background-color: #00a86b;
      }
      main {
  flex: 1;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: stretch;
  padding: 0;
  gap: 0;
  height: calc(100vh - 130px); /* header + footer */
}
      section {
  flex: 1;
  min-height: 100%;
  border: 2px solid #333;
  border-radius: 0;
  overflow: hidden;
  transition: transform 0.3s ease, filter 0.3s ease;
}
      section:hover {
  transform: none;
  border-color: #00C781;
  filter: grayscale(50%) brightness(1.05);
}
      section a {
        position: relative;
        display: block;
        width: 100%;
        height: 100%;
        overflow: hidden;
      }
      section a img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 0;
}
      section a span {
        position: relative;
        z-index: 2;
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100%;
        width: 100%;
        color: white;
        font-size: 1.5rem;
        font-weight: bold;
        text-shadow: 0 0 10px black;
        background-color: rgba(0, 0, 0, 0.4);
      }
      footer {
        position: sticky;
        bottom: 0;
        z-index: 1000;
        background-color: #111;
        color: #aaa;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem 1.5rem;
        font-size: 0.9rem;
      }
      .footer-left {
        flex: 1;
      }
      .footer-right {
        flex-shrink: 0;
      }
      .footer-right a {
        color: #aaa;
        text-decoration: none;
        margin-left: 1rem;
        font-size: 1.2rem;
      }
      .footer-right a:hover {
        color: #fff;
      }
      @media (max-width: 768px) {
        main {
          flex-direction: column;
        }
        section {
          min-height: 200px;
        }
      }
    </style>
  </head>
  <body>
    <div class="page">
      <header>
        <div style="flex: 1; display: flex; justify-content: flex-start;">
          <a href="/" class="logo">Services</a>
        </div>
        <div style="flex: 1; text-align: center;">
          <a href="/resources" aria-label="Resources" style="color: white; text-decoration: none; font-weight: bold; font-size: 1rem;">üìö Resources</a>
        </div>
        <div style="flex: 1; display: flex; justify-content: flex-end;">
          <a href="/contact" class="contact-button">Contact</a>
        </div>
      </header>

      <main>
        <section>
          <a href="/live">
            <img src="/images/live.png" alt="Live Production" />
            <span>Live Production</span>
          </a>
        </section>
        <section>
          <a href="/studio">
            <img src="/images/studio.png" alt="Post Production" />
            <span>Post Production</span>
          </a>
        </section>
        <section>
          <a href="/field">
            <img src="/images/field.png" alt="Field Recording" />
            <span>Field Recording</span>
          </a>
        </section>
      </main>

      <footer>
        <div class="footer-left">
          <a href="/" aria-label="Home" style="color: #aaa; text-decoration: none; font-size: 1.2rem; margin-right: 1rem;">üè†</a>
          ¬© combat.audio 2025
        </div>
      </footer>
    </div>
  </body>
</html>
