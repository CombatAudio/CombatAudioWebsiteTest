---
const title = "Contact";
---
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <style>
      html, body {
        margin: 0;
        padding: 0;
        height: 100%;
        font-family: Arial, sans-serif;
        background-color: #111;
        color: white;
        overflow: hidden;
      }
      header {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        height: 70px;
        background-color: #111;
        color: white;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0 1.5rem;
        z-index: 1000;
      }
      .logo {
        font-size: 1.2rem;
        font-weight: bold;
      }
      .contact-button {
        background-color: #00C781;
        color: white;
        border: none;
        padding: 0.5rem 1rem;
        border-radius: 4px;
        text-decoration: none;
        font-weight: bold;
        cursor: pointer;
        transition: background-color 0.3s ease;
      }
      .contact-button:hover {
        background-color: #00a86b;
      }
      main {
        margin-top: 70px;
        height: calc(100vh - 70px);
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
      }
      a.back-link {
        color: #ccc;
        text-decoration: none;
        margin-top: 2rem;
      }
    </style>
  </head>
  <body>
    <header>
      <div class="logo">Recording Services</div>
      <a href="/contact" class="contact-button">Contact</a>
    </header>
    <main>
      <h1>Contact</h1>
      <p>You can reach me at <a href="mailto:you@example.com" style="color: #00C781;">you@example.com</a></p>
      <a href="/" class="back-link">‚Üê Back to Home</a>
    </main>
  </body>
</html>
