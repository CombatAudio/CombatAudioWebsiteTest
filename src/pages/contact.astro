---
const title = "Contact";
---
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <style>
      html, body {
        margin: 0;
        padding: 0;
        height: 100%;
        font-family: Arial, sans-serif;
      }
      body {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
      }
      .page {
        display: flex;
        flex-direction: column;
        flex: 1;
        background-color: #111;
        color: white;
      }
      header {
        position: sticky;
        top: 0;
        z-index: 1000;
        height: 70px;
        background-color: #111;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0 1.5rem;
      }
      .logo {
        font-size: 1.2rem;
        font-weight: bold;
        text-decoration: none;
        color: white;
      }
      .contact-button {
        background-color: #00C781;
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 4px;
        text-decoration: none;
        font-weight: bold;
        cursor: pointer;
        transition: background-color 0.3s ease;
      }
      .contact-button:hover {
        background-color: #00a86b;
      }
      main {
        flex: 1;
        padding: 2rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
      }
      form {
        background-color: #222;
        padding: 2rem;
        border-radius: 8px;
        width: 100%;
        max-width: 500px;
        display: flex;
        flex-direction: column;
        gap: 1rem;
        margin-bottom: 0; /* ensure no extra space */
      }
      input, textarea {
        padding: 0.75rem;
        border: none;
        border-radius: 4px;
        font-size: 1rem;
      }
      input[type="submit"] {
        background-color: #00C781;
        color: white;
        font-weight: bold;
        cursor: pointer;
      }
      input[type="submit"]:hover {
        background-color: #00a86b;
      }
      label {
        font-weight: bold;
      }
      footer {
        background-color: #111;
        color: #aaa;
        text-align: center;
        padding: 1rem;
        font-size: 0.9rem;
      }
    </style>
  </head>
  <body>
    <div class="page">
      <header>
        <a href="/" class="logo">Recording Services</a>
        <a href="/contact" class="contact-button">Contact</a>
      </header>
      <main>
        <h1>Contact</h1>
        <form action="https://formspree.io/f/your-form-id" method="POST">
          <label for="name">Your Name</label>
          <input type="text" name="name" id="name" required />

          <label for="email">Your Email</label>
          <input type="email" name="email" id="email" required />

          <label for="service">What kind of recording are you looking for?</label>
          <input type="text" name="service" id="service" />

          <label for="message">Tell me more</label>
          <textarea name="message" id="message" rows="5" required></textarea>

          <input type="submit" value="Send Message" />
        </form>
      </main>
      <footer>
        <p>Â© Combat Audio 2025</p>
      </footer>
    </div>
  </body>
</html>
