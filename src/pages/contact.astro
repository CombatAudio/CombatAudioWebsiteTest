---
const title = "Contact";
---
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <style>
      html, body {
        margin: 0;
        padding: 0;
        height: 100%;
        font-family: Arial, sans-serif;
        background-color: #111;
        color: white;
        overflow: hidden;
      }
      header {
        position: sticky;
        top: 0;
        z-index: 1000;
        height: 70px;
        background-color: #111;
        color: white;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0 1.5rem;
      }
      .logo {
        font-size: 1.2rem;
        font-weight: bold;
        text-decoration: none;
        color: white;
      }
      .contact-button {
        background-color: #00C781;
        color: white;
        border: none;
        padding: 0.5rem 1rem;
        border-radius: 4px;
        text-decoration: none;
        font-weight: bold;
        cursor: pointer;
        transition: background-color 0.3s ease;
      }
      .contact-button:hover {
        background-color: #00a86b;
      }
      main {
        margin-top: 70px;
        min-height: calc(100vh - 70px);
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 2rem;
      }
      form {
        background-color: #222;
        padding: 2rem;
        border-radius: 8px;
        width: 100%;
        max-width: 500px;
        display: flex;
        flex-direction: column;
        gap: 1rem;
      }
      input, textarea {
        padding: 0.75rem;
        border: none;
        border-radius: 4px;
        font-size: 1rem;
      }
      input[type="submit"] {
        background-color: #00C781;
        color: white;
        font-weight: bold;
        cursor: pointer;
      }
      input[type="submit"]:hover {
        background-color: #00a86b;
      }
      label {
        font-weight: bold;
        margin-bottom: 0.2rem;
      }
      .back-link {
        margin-top: 2rem;
        color: #ccc;
        text-decoration: none;
      }
      footer {
      background-color: #111;
      color: #aaa;
      text-align: center;
      font-size: 0.9rem;
      padding: 1rem;
      position: relative;
      margin-top: auto;
      }

    </style>
  </head>
  <body>
    <header>
  		<a href="/" class="logo">Recording Services</a>
  		<a href="/contact" class="contact-button">Contact</a>
	  </header>

    <main>
      <h1>Contact</h1>

      <!-- ✅ FORM START -->
      <form action="https://formspree.io/f/xdkgreoe" method="POST">
  <input type="hidden" name="_redirect" value="/thanks" />


        <label for="email">Your Email</label>
        <input type="email" name="email" id="email" required />

        <label for="service">What kind of recording are you looking for?</label>
        <input type="text" name="service" id="service" placeholder="Live, Studio, Field..." />

        <label for="message">Tell me more</label>
        <textarea name="message" id="message" rows="5" required></textarea>

        <input type="submit" value="Send Message" />
      </form>
      <!-- ✅ FORM END -->

      <a href="/" class="back-link">← Back to Home</a>
    </main>

  <!-- FOOTER -->
  <footer>
    <p>© Combat Audio 2025</p>
  </footer>

  </body>
</html>
